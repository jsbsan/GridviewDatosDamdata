Public Sub reemplazosFechas(contenido As String) As String

  contenido = Replace(contenido, "/30 ", "/2030 ")
  contenido = Replace(contenido, "/29 ", "/2029 ")
  contenido = Replace(contenido, "/28 ", "/2028 ")
